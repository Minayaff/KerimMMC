@model IEnumerable<Blog>

    @{

            ViewData["Title"] = "Index";
    }



    <div class="row">
        <div class="col-12 col-md-12">
            <a asp-area="Admin" asp-controller="Blog" asp-action="Create" class="btn btn-primary btn-block">
                <i class="fa fa-plus"></i> Create new Blog
            </a>
        </div>

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Data Table</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 25%;">Şəkil</th>
                                <th>Position</th>
                                <th>Office</th>
                                <th>Salary</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/images/blog/@blog.Image" class="img-thumbnail" style="width:100%" alt="blog-thumb" />
                                </td>
                                <td>
                                    <p>@blog.HeadText</p>
                                </td>
                                <td>
                                    @if (blog.Text.Length > 12)
                                    {
                                        <p style="height: 100px; overflow:hidden">@(blog.Text.Substring(0, 50))  <span>...</span></p>
                                    }
                                    else
                                    {
                                        <p>@blog.Text</p>
                                    }
                                </td>
                                <td style="display:flex">
                                    <a asp-action="Details" asp-route-id="@blog.Id" class="btn btn-success"><i class="fa fa-eye"></i></a>
                                    @if (Model.Count() > 1)
                                    {
                                        <a asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger" onclick="return confirm('Silmək istədiyinizdən əminsiz? ')"><i class="fa fa-trash-o"></i></a>
                                    }
                                </td>
                            </tr>
                            }
                            </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>