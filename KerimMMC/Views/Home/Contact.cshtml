@inject IStringLocalizer<SharedResources> SharedLocalizer
@model KerimMMC.Models.Contact
@{
    ViewData["Title"] = "Contact";
}
<!--    Main Area Start   -->
<main>
    <!--    Breadcrumb Area Start   -->
    <section class="breadcrumb-area pt-180 pb-180 pb-md-150 pt-md-150 pb-xs-100 pt-xs-100" data-overlay="dark"
             data-opacity="9" style="background-image: url(/images/bg/breadcrumb-bg-1.jpg)">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="breadcrumb-content">
                        <h3 class="title">@SharedLocalizer["contact"]</h3>
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">@SharedLocalizer["mainPage"]</a></li>
                            <li class="active">@SharedLocalizer["contact"]</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--    Breadcrumb Area Start   -->
    <!--    Contact Area Start    -->
    <div class="contact-wrapper pb-120">
        <div class="container">
            <div class="row contact-info-wrapper mt--100">
                <div class="col-xl-4 col-lg-4 col-md-12">
                    <div class="contact-info-wrap-2 contact-info-border">
                        <div class="contact-info-icon">
                            <img src="~/images/icon/map-2.png" alt="icon">
                        </div>
                        <div class="contact-info-details">
                            <h5 class="contact-info-title">
                                @SharedLocalizer["address"]
                            </h5>
                            <ul>
                                <li>Qara qarayev/Özbəkistan küç 61 A</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-12">
                    <div class="contact-info-wrap-2 contact-info-border">
                        <div class="contact-info-icon">
                            <img src="~/images/icon/phone-2.png" alt="icon">
                        </div>
                        <div class="contact-info-details">
                            <h5 class="contact-info-title">
                                @SharedLocalizer["contactme"]
                            </h5>
                            <ul>
                                <li>
                                    (012) 323 16 07
                                </li>
                                <li>0502800774</li>
                                <li>0773377729</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-12">
                    <div class="contact-info-wrap-2">
                        <div class="contact-info-icon">
                            <img src="~/images/icon/email-2.png" alt="icon">
                        </div>
                        <div class="contact-info-details">
                            <h5 class="contact-info-title">
                                Email
                            </h5>
                            <ul>
                                <li>
                                    Kttq.mmc@gmail.com
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!--    Contact Area Start   -->
    <div class="contact-area">
        <div class="container">
            <div class="row align-items-center justify-content-between justify-content-md-center pt-50 pb-50">
                <div class="col-xl-6 col-lg-6 col-md-8 mb-md-80 mb-xs-80 text-center">
                    <div class="contact-thumb">
                        <img class="bounce-up" src="~/images/thumb/thumb-2.png" alt="thumb">
                        <div class="contact-thumb-shape"></div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-md-8">
                    <div class="section-title section-title-white mb-45 mb-xs-50">
                        <span class="sub-title">
                            @SharedLocalizer["contactme"]
                        </span>
                        <h3 style="font-size: 3rem;">
                            @SharedLocalizer["question"]
                        </h3>
                    </div>
                    <div class="contact-form">
                        <form method="post">
                            <div class="row">

                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input type="text" asp-for="Fullname" placeholder="Tam Ad">
                                        <span asp-validation-for="Fullname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <input type="email" asp-for="Email" placeholder="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <textarea asp-for="Message" placeholder="Mesajınız"></textarea>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <input style="width:100%" asp-action="Contact" class="btn btn-danger" type="submit" value="Göndər" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--    Contact Area End    -->
    <!--    Contact Area End    -->
    <!--    Map Area Start   -->
    <div style="width: 100%"><iframe width="100%" height="600" src="https://maps.google.com/maps?width=100%&amp;height=600&amp;hl=en&amp;q=Bak%C4%B1.%20Qara%20Qarayev+(My%20Business%20Name)&amp;ie=UTF8&amp;t=&amp;z=17&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"><a href="http://www.gps.ie/">GPS coordinates</a></iframe></div><br />


</main>
<!--    Main Area End    -->

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCIJ_QKHN-bi6_1C9f5eYE3pZs1zhQIo5o"></script>